{
  "settings" : { 
    "ecmascript": 6,
    "jsx": true
  },
  "env": {
	"node": true
  },
  "rules": {
	"no-mixed-requires": [2, false],
	"block-scoped-var": 2,
	"brace-style": [2, "1tbs"],
	"camelcase": 1,
	"curly": 2,
	"eol-last": 2,
	"eqeqeq": [2, "smart"],
	"max-depth": [1, 3],
	"max-statements": [1, 15],
	"max-len": [1, 100],
	"no-extend-native": 2,
	"no-mixed-spaces-and-tabs": 2,
	"no-trailing-spaces": 2,
	"no-use-before-define": [2, "nofunc"],
	"no-unused-vars": 2,
	"quotes": [2, "double", "avoid-escape"],
	"semi": [2, "always"],
	"space-after-keywords": [2, "always"],
	"space-in-brackets": [2, "never"],
	"space-unary-word-ops": 2,
	"no-underscore-dangle": 0,
	"no-console" : 0,
    "new-cap" : 0, 
	"guard-for-in": 2
  },
  "globals": {
	"_" : false,
	"$" : false,
	"window" : false,
	"document" : false,
	"__dirname" : false,
	"module": false
  }
}
